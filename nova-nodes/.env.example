# Private key for deployment (DO NOT COMMIT ACTUAL KEY)
PRIVATE_KEY=your_private_key_here

# Snowtrace API key for contract verification
SNOWTRACE_API_KEY=your_snowtrace_api_key

# CoinMarketCap API key for gas reporting
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Enable gas reporting
REPORT_GAS=false

# Fork Avalanche mainnet for testing
FORK_AVALANCHE=false

# RPC URLs (optional, defaults are in hardhat.config.js)
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
FUJI_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc
